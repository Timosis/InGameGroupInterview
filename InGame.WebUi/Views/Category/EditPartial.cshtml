@model InGame.Dtos.CategoryDto

@{
    ViewData["Title"] = "EditPartial";
}

@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns

<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <ejs-dropdownlist id="vegetables" placeholder="Select a category" popupHeight="200px" dataSource="@ViewBag.dataSource">
                    <e-dropdownlist-fields groupBy="Parent" value="Category"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="e-float-input e-control-wrapper">
                <input name="CategoryName" value=@Model.CategoryName.ToString() />
                <span class="e-float-line"></span>
                <label asp-for="CategoryName" class="e-float-text e-label-top">Task Name</label>
            </div>
        </div>
    </div>

</div>


